@model IEnumerable<SalesWebMvc.Models.Seller>


@{
    ViewData["Title"] = "Sellers";

}
<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="text-white bg-dark">
            <th>@Html.DisplayNameFor(model => model.name)</th>
            <th>@Html.DisplayNameFor(model => model.email)</th>
            <th>@Html.DisplayNameFor(model => model.birthDate)</th>
            <th>@Html.DisplayNameFor(model => model.baseSalary)</th>
            <th></th>
            <th></th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItemm => item.name)</td>
                <td>@Html.DisplayFor(modelItemm => item.email)</td>
                <td>@Html.DisplayFor(modelItemm => item.birthDate)</td>
                <td>@Html.DisplayFor(modelItemm => item.baseSalary)</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">edit</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.id">details</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.id">delete</a>
                </td>
            </tr>


        }

    </tbody>

</table>